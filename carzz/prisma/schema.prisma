generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // Auto-incrementing integer for the primary key
  name      String   // User's name (required)
  email     String   @unique // User's email (unique)
  avatar    String?  // Avatar (optional)
  createdAt DateTime @default(now()) // Created at timestamp (defaults to now)
}
